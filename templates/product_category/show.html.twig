{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product_category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product_category.name }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row">
        <a class="btn btn-sm btn-dark mr-2" href="{{ path('product_category_index') }}">Back to list</a>

